package utils;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;

public class Parser {
	
	public static ArrayList<String> tokenize(String filename) {
		ArrayList<String> tokens = new ArrayList<String>();
		try(BufferedReader br = new BufferedReader(new FileReader("src/text/" + filename + ".txt"))) {		
			String line = br.readLine();
			while (line != null) {
				ArrayList<String> newTokens = parseLine(line);				
				line = br.readLine();
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
		return tokens;			
	}
	
	private static ArrayList<String> parseLine(ArrayList<String> tokens, String line) {
		String[] splitString = line.split("[\\p{Punct}\\s]+");
		for (String s : splitString) {
			if (!tokens.contains(s)) {
				tokens.add(s);
			}				
		}
	}

}
